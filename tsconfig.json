{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@*": ["./src/*"],
      "@api": ["src/api"],
      "@assets": ["src/assets"],
      "@components": ["src/components"],
      "@constants": ["src/constants"],
      "@hooks": ["src/hooks"],
      "@navigation": ["src/navigation"],
      "@screens": ["src/screens"],
      "@storehooks": ["src/store/hooks.ts"],
      "@store": ["src/store/*"],
      "@slice": ["src/store/slice"],
      "@type": ["src/type"],
      "@utils": ["src/utils"]
    }
  }
}
